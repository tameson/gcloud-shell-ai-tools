{
    "mcpServers": {
      "bigquery": {
        "command": "uvx",
        "args": ["bigquery-mcp", "--project", "bi-project-392012", "--location", "europe-west4"]
      },
      "context7": {
        "type": "http",
        "url": "https://mcp.context7.com/mcp"
      },
      "chrome-devtools": {
        "command": "npx",
        "args": ["-y", "chrome-devtools-mcp@latest"]
      },
      "product_search": {
        "transport": "streamable_http",
        "url": "https://product-search-mcp-tameson.replit.app/mcp/",
        "headers": {
          "Authorization": "Bearer ${PRODUCT_SEARCH_TOKEN}"
        }
      }
    }
  }
  